<h1>Editar Perfil</h1>
<div class="user">
  <%= form_for @user, url: profile_path do |f| %>
    <% if @user.errors.any? %>
      <div class="alert alert-danger">
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :Nombre_de_Usuario %>
      <%= f.text_field :username, class: 'form-control' %>
    </div>

    <div class="field">
      <%= f.label :BiografÃ­a %>
      <%= f.text_area :biography, class: 'form-control' %>
    </div>

