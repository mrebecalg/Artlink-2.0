<%= form_with(model: publication) do |form| %>
  <% if publication.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(publication.errors.count, "error") %> impiden que la publicación sea creada:</h2>

      <ul>
        <% publication.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :Nombre, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :Descripción, style: "display: block" %>
    <%= form.textarea :description %>
  </div>

  <div>
    <%= form.label :Imagen, style: "display: block" %>
    <%= form.file_field :picture %>
  </div>

  <div>
    <%= form.label :Precio, style: "display: block" %>
    <%= form.text_field :price %>
  </div>

  <div>
    <%= form.submit "Crear Publicación" %>
  </div>
<% end %>
